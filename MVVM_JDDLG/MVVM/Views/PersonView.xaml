<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM_JDDLG.MVVM.Views.PersonView"
             Title="PersonView">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">
        <Label 
            Text="{Binding Person.Name}" />
        <Slider Maximum="100" Minimum="0"
                Value="{Binding Person.Age}"/>

        <Switch 
            IsToggled="{Binding Person.IsMarried}" />
        <DatePicker 
            Date="{Binding Person.Birthday}" />

        <Entry 
            Text="{Binding Person.Weight}" />

        <TimePicker 
            Time="{Binding Person.LunchTime}" />

    </VerticalStackLayout>
</ContentPage>